<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Inicio">

    <!-- Fondo con degradado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/logo_stocktech_blanco__1_"
            android:layout_gravity="center"
            android:contentDescription="Logo de la aplicación"
            android:elevation="8dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/tvInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <!-- Contenedor de entrada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-MAIL"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduce tu correo"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etContraseñaUsuario"
                android:password="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduce tu contraseña"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:textColor="#000000" />

            <!-- Registro -->
            <TextView
                android:id="@+id/tvRegistrarse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿No tienes una cuenta? Regístrate"
                android:textColor="#1E88E5"
                android:gravity="center"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- Botón de inicio de sesión -->
        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_nuevo"
            android:text="Iniciar Sesión"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="6dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="24dp"
            android:paddingVertical="12dp" />

        <!-- Redes sociales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btnGitHub"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/github_mark_white3"
                android:background="@null"
                android:layout_marginHorizontal="8dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
