<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Registro">

    <!-- Fondo con degradado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_stocktech_blanco__1_"
            android:layout_gravity="center"
            android:contentDescription="Logo de la aplicación"
            android:elevation="8dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/tvInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginVertical="16dp" />

        <!-- Formulario de Registro -->
        <LinearLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <!-- E-mail -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-MAIL"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etNombreUsuarioRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduce el email de la empresa"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTRASEÑA"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etContraseñaUsuarioRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduce la contraseña"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:textColor="#000000"
                android:password="true"/>

            <!-- Confirmar Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPROBAR CONTRASEÑA"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etConfirmarContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vuelve a introducir la contraseña"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:textColor="#000000"
                android:password="true"/>
        </LinearLayout>

        <!-- Botón de Registrarse -->
        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_nuevo"
            android:text="CREAR CUENTA"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="6dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="24dp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
